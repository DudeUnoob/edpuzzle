<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap');
    .classes{
        display: flex;
        flex-direction: row;
        
  margin: 10px;
    }


    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Fredoka One', cursive;
  
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica,
    Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    background-image: url(https://coolbackgrounds.io/images/backgrounds/index/aqua-d9b59c89.png);
}

.main-container {
  padding: 30px;
}

/* HEADING */

.heading {
  text-align: center;
}

.heading__title {
  font-weight: 600;
}

.heading__credits {
  margin: 10px 0px;
  color: #888888;
  font-size: 25px;
  transition: all 0.5s;
}

.heading__link {
  text-decoration: none;
}

.heading__credits .heading__link {
  color: inherit;
}

/* CARDS */

.cards {
    display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-items: center;
  
}

.card {
    
  margin: 20px;
  padding: 20px;
  width: 500px;
  min-height: 200px;
  display: grid;
  grid-template-rows: 20px 50px 1fr 50px;
  border-radius: 10px;
  box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.25);
  transition: all 0.2s;
}

.card:hover {
  box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.4);
  transform: scale(1.01);
  cursor: pointer;
}

.card__link,
.card__exit,
.card__icon {
  position: relative;
  text-decoration: none;
  color: rgba(255, 255, 255, 0.9);
}

.card__link::after {
  position: absolute;
  top: 25px;
  left: 0;
  content: "";
  width: 0%;
  height: 3px;
  background-color: rgba(255, 255, 255, 0.6);
  transition: all 0.5s;
}

.card__link:hover::after {
  width: 100%;
}

.card__exit {
  grid-row: 1/2;
  justify-self: end;
}

.card__icon {
  grid-row: 2/3;
  font-size: 30px;
}

.card__title {
  grid-row: 3/4;
  font-weight: 400;
  color: #ffffff;
}



/* CARD BACKGROUNDS */

.card-1 {
  background: radial-gradient(#1fe4f5, #3fbafe);
}


/* RESPONSIVE */

@media (max-width: 1600px) {
  .cards {
    justify-content: center;
  }
}

</style>
<body>
    
    <!-- <p><%= edpuzzleData[0].name %></p> -->
    <div class="cards" >
        <% edpuzzleData.map((elm,i) => { %>
            
                <div class="card card-1" onclick="answers('<%= elm._id %>')">
                  <div class="card__icon"><i class="fas fa-bolt"></i></div>
                  <p class="card__exit"><i class="fas fa-times"></i></p>
                  <h2 class="card__title"><%= elm.name %></h2>
                  <p class="card__apply">
                    <a class="card__link" href="#">Get Answers Now<i class="fas fa-arrow-right"></i></a>
                  </p>
                </div>
           
            <!-- <div class="classes">
            <button onclick="answers('<%= elm._id %>')"><p><%= elm.name %></p></button>
        </div> -->
        <!-- <p><%= elm.students[i].id %></p> -->
        <% }) %>
    </div>
   
</body>
<script>
    function answers(id){
        window.location.href = `/edpuzzle/classroom/${id}`
    }
</script>
</html>